@model List<string>

@{
    ViewData["Title"] = "Uploaded Files";
}

<h2>Uploaded Files</h2>

@if (Model.Count == 0)
{
    <p>No files have been uploaded yet.</p>
}
else
{
    <ul>
        @foreach (var fileName in Model)
        {
            <li>
                <a href="@Url.Content("~/uploads/" + fileName)" target="_blank">@fileName</a>
            </li>
        }
    </ul>
}

<a asp-action="Create" class="btn btn-primary">Upload More Files</a>
