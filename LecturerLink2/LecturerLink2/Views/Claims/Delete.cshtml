@{
}
@model LecturerLink2.Models.Claims

@{
    ViewData["Title"] = "Delete Claim";
}

<h1>Delete Claim</h1>

<div>
    <h4>Are you sure you want to delete this claim?</h4>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Firstname</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Lastname</dd>

        <dt class="col-sm-2">Hours Worked</dt>
        <dd class="col-sm-10">@Model.HouresWorked</dd>

        <dt class="col-sm-2">Claims Period Start</dt>
        <dd class="col-sm-10">@Model.Claimsperiodstart.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Claims Period End</dt>
        <dd class="col-sm-10">@Model.Claimsperiodend.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Rate Per Hour</dt>
        <dd class="col-sm-10">@Model.RatePerHour</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Description Of Work</dt>
        <dd class="col-sm-10">@Model.DiscriptionOfWork</dd>

        <dt class="col-sm-2">Uploaded File</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <a href="@Url.Content(Model.FilePath)" target="_blank">View File</a>
            }
            else
            {
                <span>No file uploaded</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
